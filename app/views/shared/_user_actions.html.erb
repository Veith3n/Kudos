<% if user_signed_in? %>
  <% value = (current_user.weekly_kudos_limit - current_user.kudos_given_in_a_week) %>
  <%= "Kudos left in this week: #{ (value > 0) ? value : 'none'}" %>
  <%= link_to 'Create team', new_team_path, class: 'btn btn-primary  float: right' %>
  <%= render partial: 'shared/user_dropdown' %>
<% else %>
  <% unless current_page?(root_path) %>
    <% unless current_page?(new_user_session_path) %>
      <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary' %>
    <% end %>
    <% unless current_page?(new_user_registration_path) %>
      <%= link_to 'Register', new_user_registration_path, class: 'btn btn-info' %>
    <% end %>
  <% end %>
<% end %>